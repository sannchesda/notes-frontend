{
  "name": "notes-frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "predeploy": "DEPLOY_TARGET=github-pages npm run build",
    "deploy": "gh-pages -d dist",
    "deploy:ci": "DEPLOY_TARGET=github-pages npm run build && gh-pages -d dist -u 'github-actions[bot] <github-actions[bot]@users.noreply.github.com>'",
    "docker:build": "docker build -t notes-frontend .",
    "docker:build-dev": "docker build -f Dockerfile.dev -t notes-frontend-dev .",
    "docker:run": "docker run -p 3000:80 notes-frontend",
    "docker:run-dev": "docker run -p 5173:5173 -v $(pwd):/app -v /app/node_modules notes-frontend-dev",
    "docker:up": "docker-compose up --build",
    "docker:up-dev": "docker-compose --profile dev up",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "gh-pages": "^6.3.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vue-tsc": "^3.0.4"
  }
}
